{
  "name": "craftworks-backend-typescript",
  "version": "1.0.0",
  "description": "Backend for Egyptian local craftsmen service marketplace (TypeScript, Express, MongoDB)",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/index.ts\"",
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "check": "npm run typecheck && npm run lint",
    "init-logs": "node --loader ts-node/esm scripts/init-logging.ts"
  },
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "resend": "^2.0.0",
    "socket.io": "^4.7.5",
    "streamifier": "^0.1.1",
    "stripe": "^14.23.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.11.30",
    "@types/streamifier": "^0.1.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
